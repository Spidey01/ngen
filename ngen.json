{
    "project": "ngen",
    "version": "1.9",
    "type": "cxx_application",
    "distribution": {
        "bindir": ""
    },
    "sources": [
        "src/Shinobi.cpp",
        "src/Statement.cpp",
        "src/cmake.cpp",
        "src/cxxbase.cpp",
        "src/external.cpp",
        "src/gcc.cpp",
        "src/javac.cpp",
        "src/main.cpp",
        "src/msvc.cpp",
        "src/package.cpp",
        "src/path.cpp",
        "src/util.cpp"
    ],
    "gcc": {
        "cppflags": "-Isrc -Ijson/single_include -DNGEN_VERSION=\\\"$ngen_version\\\"",
        "cxxflags": "-std=c++17 -Wall -ggdb3",
        "ldflags": "",
        "ldlibs": "-lstdc++fs"
    },
    "msvc": {
        "cppflags": [
            "/DNGEN_VERSION=\\\"$ngen_version\\\"",
            "/DWIN32",
            "/D_WINDOWS",
            "/Isrc", "/Ijson\\single_include"
        ],
        "cxxflags": [
            "/std:c++17",
            "/W4",
            "/GR", "/EHsc",
            "/Zi", "/Ob0", "/Od", "/RTC1",
            "/FS"
        ],
        "ldflags": [
            "/MD",
            "/FS"
        ]
    }
}

